<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF330000"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_gravity="left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25sp"
            android:text="Créer une activité"
            android:textStyle="bold"
            android:onClick="test_type_create_excursion"
            android:textColor="@color/common_action_bar_splitter"/>

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25sp"
        android:text="Rejoindre une activité"
        android:textStyle="bold"
        android:onClick="joinActivity"
        android:textColor="@color/common_action_bar_splitter"/>


    <TextView
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25sp"
    android:text="Historique"
    android:textStyle="bold"
        android:onClick="goToUserStatistics"
        android:textColor="@color/common_action_bar_splitter"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paramètres de l'utilisateur"
            android:textColor="@color/common_action_bar_splitter"
            android:padding="25sp"
            android:textStyle="bold"
            android:onClick="setUserParameters"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25sp"
            android:textStyle="bold"
            android:text="Se déconnecter"
            android:gravity="bottom"
            android:onClick="disconnectUser"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>