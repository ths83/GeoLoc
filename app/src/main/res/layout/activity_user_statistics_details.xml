<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HistoryDetailsActivity"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History one"
        android:id="@+id/name"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="November 22,2015"
        android:layout_alignBaseline="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:id="@+id/date" />



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:orientation="vertical"
        android:layout_below="@+id/name"
        android:id="@+id/tableLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_marginTop="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:id="@+id/excursionType"/>

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durée"
            android:layout_alignBottom="@+id/name"
            android:layout_below="@+id/name"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:layout_marginLeft="15sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginLeft="15sp"
            android:id="@+id/excursionTime"
            />

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kilomètres"
            android:layout_alignBottom="@+id/name"
            android:layout_below="@+id/name"
            android:textStyle="bold"
            android:layout_marginLeft="15sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:id="@+id/excursionDistance"/>

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moyenne"
            android:layout_alignBottom="@+id/name"
            android:layout_below="@+id/name"
            android:textStyle="bold"
            android:layout_marginLeft="15sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:id="@+id/excursionAverageSpeed"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sauvegarder"
            android:layout_marginTop="20sp"
            android:onClick="closeActivity"
            />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            android:background="#FFCA2300"
            android:layout_marginTop="20sp"
            android:onClick="closeActivity"
           />



    </TableLayout>



</LinearLayout>
